<?xml version="1.0" encoding="UTF-8" ?> 
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> 

<mapper namespace="favoriteMapper">

	<!-- 즐겨찾기 작성 -->
	<insert id ="addFavorite" parameterType="review">
		insert into favorite values(#{favorite_seq.nextval} , #{userId}, #{LAUNDRY_SEQ.currval})
	</insert> 
	
	<!-- 즐겨찾기 삭제 -->
	<delete id = "deleteFavorite" parameterType="review">
		delete from review where #{review_seq.nextval}
	</delete>
	
	<!-- 유저 아이디로 즐겨찾기 검색 -->
	<select id="searchFavoriteByUserId">
		select * from review where user_id = #{_parameter}
	</select>
	
	<!-- 점포 아이디로 즐겨찾기 -->
	<select id="searchFavoriteByLaundryId">
		select * from review where laundry_id = #{_parameter}
	</select>

</mapper>